                            {{/avatar_stack}}
                            <!-- /Reveal full -->
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 text-right">
                            <!-- Reveal full: right-align -->
                            {{#avatar_stack 'stack--reveal-full stack--right'}}
                                {{#avatar_has 'avatar--lg' 'rounded-circle'}}
                                    {{#avatar_img ''}}
