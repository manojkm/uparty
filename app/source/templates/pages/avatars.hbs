                                {{#avatar_has 'avatar--secondary avatar--lg' 'rounded-circle'}}
                                    {{#avatar_char '' 'SS'}}{{/avatar_char}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--light avatar--lg' 'avatar-more-x rounded-circle'}}
                                    {{#avatar_char '' '+3'}}{{/avatar_char}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--lg' 'rounded-circle'}}
                                    {{#avatar_img ''}}
                                        <img src="https://semantic-ui.com/images/avatar/large/joe.jpg" alt="Avatar image">
                                    {{/avatar_img}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--info avatar--lg' 'rounded-circle'}}
                                    {{#avatar_char '' 'DK'}}{{/avatar_char}}
