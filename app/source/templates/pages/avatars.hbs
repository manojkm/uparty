                                {{/avatar_has}}
                                {{#avatar_has 'avatar--primary avatar--lg' 'rounded-circle'}}
                                    {{#avatar_char '' 'PR'}}{{/avatar_char}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--lg' 'rounded-circle'}}
                                    {{#avatar_img ''}}
