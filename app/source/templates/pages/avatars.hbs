                                    {{/avatar_img}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--danger avatar--lg' ''}}
                                    {{#avatar_char '' 'DN'}}{{/avatar_char}}
                                {{/avatar_has}}
                            {{/avatar_stack}}
                            <!-- /Reveal 3+ Square -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-right">
                            <!-- Reveal 3+ Square: right-align -->
                            {{#avatar_stack 'stack--three-plus stack--right'}}
                                {{#avatar_has 'avatar--lg' ''}}
                                    {{#avatar_img ''}}
                                        <img src="https://semantic-ui.com/images/avatar/large/joe.jpg" alt="Avatar image">
                                    {{/avatar_img}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--info avatar--lg' ''}}
                                    {{#avatar_char '' 'IF'}}{{/avatar_char}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--lg' 'avatar-more-shaded'}}{{/avatar_has}}
                                {{#avatar_has 'avatar--lg' ''}}
                                    {{#avatar_img ''}}
                                        <img src="https://semantic-ui.com/images/avatar/large/joe.jpg" alt="Avatar image">
                                    {{/avatar_img}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--danger avatar--lg' ''}}
                                    {{#avatar_char '' 'DN'}}{{/avatar_char}}
                                {{/avatar_has}}
                            {{/avatar_stack}}
                            <!-- /Reveal 3+ Square: right-align -->
                        </div>
                    </div>
                    <hr>
                    {{{card_title 'Reveal 3+ Circle'}}}
                    <div class="row">
                        <div class="col-12">
                            <!-- Reveal 3+ Circle: more-shaded -->
                            {{#avatar_stack 'stack--three-plus'}}
                                {{#avatar_has 'avatar--lg' 'rounded-circle'}}
                                    {{#avatar_img ''}}
                                        <img src="https://semantic-ui.com/images/avatar/large/joe.jpg" alt="Avatar image">
                                    {{/avatar_img}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--primary avatar--lg' 'rounded-circle'}}
