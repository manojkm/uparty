                                {{#avatar_has 'avatar--lg' 'rounded-circle'}}
                                    {{#avatar_img ''}}
                                        <img src="https://semantic-ui.com/images/avatar/large/joe.jpg" alt="Avatar image">
                                    {{/avatar_img}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--warning avatar--lg' 'rounded-circle'}}
                                    {{#avatar_char '' 'WN'}}{{/avatar_char}}
