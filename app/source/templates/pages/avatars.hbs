                            {{/avatar_stack}}
                            <!-- /Reveal 3+ Circle: more-x right-align -->
                        </div>
                    </div>
                {{/card_body}}
            {{/card}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{#card}}
                {{{card_header 'Avatar status'}}}
                {{#card_body}}
                    <p>Add class <code>.avatar-{online|offline|away|busy}</code> to create avatar with status.
                    </p>

                    {{#each avatars.list_status}}
                        <!-- {{text}} -->
                        {{#avatar_has modifier 'avatar--lg bottom-right rounded-circle mr-2'}}
                            {{#avatar_img ''}}
                                <img src="https://semantic-ui.com/images/avatar/large/joe.jpg" alt="Avatar image">
                            {{/avatar_img}}
                        {{/avatar_has}}
                        <!-- /{{text}} -->
                    {{/each}}

                    <hr>
                    {{{card_title 'Status indicator position'}}}
                    <p> Use {{#each avatars.list_position}}{{#if @last}}and {{/if}}<code>{{modifier}}</code>{{#if @last}}{{else}}, {{/if}}{{/each}} classes to change the position of the status indicator</p>

                    {{#each avatars.list_position}}
