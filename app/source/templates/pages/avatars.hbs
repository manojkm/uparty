                    <div class="row">
                        <div class="col-12 text-right">
                            <!-- Reveal 3+ Circle: more-x right-align -->
                            {{#avatar_stack 'stack--three-plus stack--right'}}
                                {{#avatar_has 'avatar--lg' 'rounded-circle'}}
