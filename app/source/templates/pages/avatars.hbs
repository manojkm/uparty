                                    {{/avatar_img}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--primary avatar--lg' 'rounded-circle'}}
                                    {{#avatar_char '' 'PR'}}{{/avatar_char}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--lg' 'rounded-circle'}}
                                    {{#avatar_img ''}}
                                        <img src="https://semantic-ui.com/images/avatar/large/joe.jpg" alt="Avatar image">
                                    {{/avatar_img}}
                                {{/avatar_has}}
                                {{#avatar_has 'avatar--secondary avatar--lg' 'rounded-circle'}}
                                    {{#avatar_char '' 'SC'}}{{/avatar_char}}
                                {{/avatar_has}}
                            {{/avatar_stack}}
