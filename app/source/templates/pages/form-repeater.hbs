---
title: "Form Repeater"
lead: An interface to add and remove a repeatable group of input elements.
forms-ui: true

js_vendors:
- jquery.repeater/jquery.repeater

js_vendors_extended:
- jquery.repeater
---

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Basic repeater'}}}
                {{#card_body}}
                    <!-- Basic repeater -->
                    <form class="repeater">
                        <!--
                            The value given to the data-repeater-list attribute will be used as the
                            base of rewritten name attributes.  In this example, the first
                            data-repeater-item's name attribute would become group-a[0][text-input],
                            and the second data-repeater-item would become group-a[1][text-input]
                        -->
                        <div data-repeater-list="group-a">
                            <div data-repeater-item>
                                <div class="input-group mb-2">
                                    <input type="text" class="form-control" name="text-input" value="A">
                                    <div class="input-group-append">
                                        <button type="button" data-repeater-delete class="btn btn-primary">
                                            <i class="icon-close"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div data-repeater-item>
                                <div class="input-group mb-2">
                                    <input type="text" class="form-control" name="text-input" value="B">
                                    <div class="input-group-append">
                                        <button type="button" data-repeater-delete class="btn btn-primary">
                                            <i class="icon-close"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input data-repeater-create type="button" class="btn btn-primary" value="Add"/>
                    </form>
                    <!-- /Basic repeater -->
                {{/card_body}}
            {{/card}}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Nested repeater'}}}
                {{#card_body}}
                    <!-- Nested repeater -->
                    <!-- outer repeater -->
                    <form class="repeater-nested">
                        <div data-repeater-list="outer-list">
                            <div data-repeater-item class="mb-4">
                                <div class="input-group mb-2">
                                    <input type="text" name="text-input" class="form-control" value="A"/>
                                    <div class="input-group-append">
                                        <input data-repeater-delete type="button" class="btn btn-primary" value="Delete"/>
                                    </div>
                                </div>
                                <!-- innner repeater -->
                                <div class="inner-repeater">
                                    <div data-repeater-list="inner-list">
                                        <div data-repeater-item>
                                            <div class="input-group mb-2">
                                                <input type="text" name="inner-text-input" class="form-control" value="B"/>
                                                <div class="input-group-append">
                                                    <input data-repeater-delete type="button" class="btn btn-primary" value="Delete"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <button type="button" data-repeater-create class="btn btn-outline-primary btn-block" data-toggle="tooltip" data-placement="right" data-trigger="hover" title="Add new"><i
                                            class="fas fa-plus"></i></button>
                                </div>
                                <hr>
                            </div>
                        </div>
                        <input data-repeater-create type="button" class="btn btn-primary" value="Add"/>
                    </form>
                    <!-- /Nested repeater -->
                {{/card_body}}
            {{/card}}
        </div>
    </div>
    <hr>
    <h3 class="mt-4 mb-3">Examples</h3>
    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Create new category'}}}
                {{#card_body}}
                    <form>
                        <div class="form-group">
                            <label for="category">Category</label>
                            <input type="text" class="form-control" id="category" placeholder="Name">
                            <small class="form-text text-muted">The name is how it appears on your site.</small>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6 repeater-default">
                                <label for="subCategory">Sub category</label>
                                <div data-repeater-list="group-b">
                                    <div data-repeater-item>
                                        <div class="input-group mb-2">
                                            <input type="text" class="form-control" name="options" id="subCategory" placeholder="Sub category">
                                            <div class="input-group-append">
                                                <button type="button" data-repeater-delete class="btn btn-primary">
                                                    <i class="icon-close"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button type="button" data-repeater-create class="btn btn-outline-primary btn-block" data-toggle="tooltip" data-placement="right" data-trigger="hover" title="Add new"><i
                                        class="fas fa-plus"></i></button>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="description">Description</label>
                                <div class="input-group with-addon-icon-left">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text align-items-start">
                                            <i class="icon-note"></i>
                                        </div>
                                    </div>
                                    <textarea class="form-control" id="description" rows="3" placeholder="Description"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="form-group file-repeater">
                            <label for="addImg-eg2">Add Image</label>
                            <div data-repeater-list="group-a">
                                <div data-repeater-item>
                                    <div class="input-group mb-2">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" name="cate-image" id="customFile">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                        </div>
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" data-repeater-delete type="button"><i class="icon-close"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="button" data-repeater-create class="btn btn-success btn-sm has-icon-left" data-toggle="tooltip" data-placement="right" data-trigger="hover" title="Upload more images">
                                <i class="icon-plus"></i>Add more
                            </button>
                        </div>
                        <hr>
                        <button type="submit" class="btn btn-primary btn-lg">Create Category</button>
                    </form>
                {{/card_body}}
            {{/card}}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'User profile'}}}
                {{#card_body}}
                    <form>
                        <div class="form-group">
                            <label for="firstName-eg1">First Name</label>
                            <input type="text" class="form-control" id="firstName-eg1" placeholder="First Name" name="username">
                        </div>

                        <div class="form-group">
                            <label for="lastName-eg1">Last Name</label>
                            <input type="text" class="form-control" id="lastName-eg1" placeholder="First Name" name="username">
                        </div>
                        <div class="form-group">
                            <label for="emailAddress-eg1">Email Address</label>
                            <input type="email" class="form-control" id="emailAddress-eg1" placeholder="Enter Email" name="email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>

                        <div class="form-group repeater-default">
                            <label for="contactNo-eg1">Contact No</label>
                            <div data-repeater-list="group-a">
                                <div data-repeater-item>
                                    <div class="input-group mb-2">
                                        <input type="text" class="form-control" placeholder="Enter Mobile No" name="contact">
                                        <div class="input-group-append">
                                            <button type="button" data-repeater-delete class="btn btn-danger">
                                                <i class="icon-close"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="button" data-repeater-create class="btn btn-success btn-sm has-icon-left"><i class="icon-plus"></i>Add new contact no</button>
                        </div>
                        <hr>
                        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                    </form>
                {{/card_body}}
            {{/card}}
        </div>
    </div>

</div>