---
title: "Form Layouts"
lead: Elements for creating great user experiences.
forms-ui: true
---

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Stacked form'}}}
                {{#card_body}}
                    <!-- Stacked form -->
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                   aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1"
                                   placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlFile1">File input</label>
                            <input type="file" class="form-control-file" id="exampleFormControlFile1">
                            <small id="fileInputHelp" class="form-text text-muted">Example block-level help text here.</small>
                        </div>

                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    <!-- /Stacked form -->
                {{/card_body }}
            {{/card}}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Horizontal form'}}}
                {{#card_body}}
                    <!-- Horizontal form -->
                    <form>
                        <div class="form-group row">
                            <label for="exampleInputName2" class="col-md-2 col-form-label">Name</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="exampleInputName2" placeholder="Name">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="exampleInputEmail2" class="col-md-2 col-form-label">Email</label>
                            <div class="col-md-10">
                                <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Email">
                                <small class="form-text text-muted">We'll never share your email with anyone
                                    else.
                                </small>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputPassword2" class="col-md-2 col-form-label">Password</label>
                            <div class="col-md-10">
                                <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="exampleInputState2" class="col-md-2 col-form-label">State</label>
                            <div class="col-md-10">
                                <select class="form-control" id="exampleInputState2">
                                    <option value="">Choose One</option>
                                    <option value="1">California</option>
                                    <option value="2">Virginia</option>
                                    <option value="3">Texas</option>
                                    <option value="4">Florida</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-10 offset-md-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="exampleRememberMe2">
                                    <label class="form-check-label" for="exampleRememberMe2">Remember me</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-10 offset-md-2">
                                <button type="submit" class="btn btn-secondary">Sign in</button>
                            </div>
                        </div>
                    </form>
                    <!-- /Horizontal form -->
                {{/card_body }}
            {{/card}}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Inline forms'}}}
                {{#card_body}}
                    <!-- Inline form example 1 -->
                    <form class="form-inline">

                        <label class="sr-only" for="inlineFormUsername2">Username</label>
                        <div class="input-group with-addon-icon-left mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="icon-user"></i></div>
                            </div>
                            <input type="text" class="form-control" id="inlineFormUsername2" placeholder="Username">
                        </div>

                        <label class="sr-only" for="inlineFormPassword2">Password</label>
                        <div class="input-group with-addon-icon-left mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="icon-key"></i></div>
                            </div>
                            <input type="password" class="form-control" id="inlineFormPassword2" placeholder="Password">
                        </div>

                        <div class="form-check mb-2 mr-sm-2">
                            <input class="form-check-input" type="checkbox" id="inlineFormCheck">
                            <label class="form-check-label" for="inlineFormCheck">
                                Remember me
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary mb-2">Login</button>
                    </form>
                    <!-- /Inline form example 1 -->
                {{/card_body }}
                <hr>
                {{#card_body}}
                    <!-- Inline form example 2 -->
                    <form class="form-inline">
                        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Preference</label>
                        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                            <option value="">Choose One</option>
                            <option value="1">California</option>
                            <option value="2">Virginia</option>
                            <option value="3">Texas</option>
                            <option value="4">Florida</option>
                        </select>
                        <div class="custom-control custom-checkbox my-1 mr-2">
                            <input type="checkbox" class="custom-control-input" id="customControlInline">
                            <label class="custom-control-label" for="customControlInline">Remember my preference</label>
                        </div>

                        <button type="submit" class="btn btn-primary my-1">Submit</button>
                    </form>
                    <!-- /Inline form example 2 -->
                {{/card_body }}
            {{/card}}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Form row'}}}
                {{#card_body}}
                    <!-- Form row -->
                    <form action="">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Email</label>
                                <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Password</label>
                                <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputCity4">City</label>
                                <input type="text" class="form-control" id="inputCity4">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputState4">State</label>
                                <select id="inputState4" class="form-control">
                                    <option selected>Choose...</option>
                                    <option>...</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <label for="inputZip4">Zip</label>
                                <input type="text" class="form-control" id="inputZip4">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </form>
                    <!-- /Form row -->
                {{/card_body }}
            {{/card}}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Equal width form'}}}
                {{#card_body}}
                    <!-- Equal width form -->
                    <form action="">

                        <form>
                            <div class="form-row form-group">
                                <div class="col">
                                    <label for="inputUsername5">Username</label>
                                    <input type="text" class="form-control" id="inputUsername5" placeholder="Username">
                                </div>
                                <div class="col">
                                    <label for="inputPassword5">Password</label>
                                    <input type="text" class="form-control" id="inputPassword5" placeholder="Password">
                                </div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col">
                                    <label for="inputFirstName5">First name</label>
                                    <input type="text" class="form-control" id="inputFirstName5" placeholder="First name">
                                </div>
                                <div class="col">
                                    <label for="inputMiddleName5">Middle name</label>
                                    <input type="text" class="form-control" id="inputMiddleName5" placeholder="Middle name">
                                </div>
                                <div class="col">
                                    <label for="inputLastName5">Last name</label>
                                    <input type="text" class="form-control" id="inputLastName5" placeholder="Last name">
                                </div>
                            </div>
                        </form>

                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </form>
                    <!-- /Equal width form -->
                {{/card_body }}
            {{/card}}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Modal form'}}}
                {{#card_body_has 'mx-auto' ''}}

                    <!-- Modal form -->
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1">
                        Modal form 1
                    </button>

                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal2">
                        Modal form 2
                    </button>

                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal3">
                        Modal form 3
                    </button>

                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal4">
                        Minimal modal form
                    </button>

                    {{#modal 'fade modal-primary''exampleModal1' 'modal-dialog-centered modal-lg'}}
                        {{{modalHeader 'Modal form 1'}}}
                        {{#modalContent}}
                            <form>
                                <div class="form-group">
                                    <label for="exampleModalInputEmail1">Email address</label>
                                    <input type="email" class="form-control" id="exampleModalInputEmail1"
                                           aria-describedby="emailHelp" placeholder="Enter email">
                                    <small id="emailModalHelp" class="form-text text-muted">We'll never share your email with anyone
                                        else.
                                    </small>
                                </div>
                                <div class="form-group">
                                    <label for="exampleModalInputPassword1">Password</label>
                                    <input type="password" class="form-control" id="exampleModalInputPassword1"
                                           placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <label for="exampleModalFormControlFile1">File input</label>
                                    <input type="file" class="form-control-file" id="exampleModalFormControlFile1">
                                    <small id="fileModalInputHelp" class="form-text text-muted">Example block-level help text here.</small>
                                </div>

                                <div class="form-group form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleModalCheck1">
                                    <label class="form-check-label" for="exampleModalCheck1">Check me out</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        {{/modalContent}}
                        {{{modalFooterSimple}}}
                    {{/modal}}


                    {{#modal 'fade modal-secondary''exampleModal2' 'modal-dialog-centered modal-fullscreen'}}
                        {{{modalHeader 'Modal form 2'}}}
                        {{#modalContent}}
                            <form>
                                <div class="form-group row">
                                    <label for="exampleModalInputName2" class="col-md-2 col-form-label">Name</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="exampleModalInputName2" placeholder="Name">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="exampleModalInputEmail2" class="col-md-2 col-form-label">Email</label>
                                    <div class="col-md-10">
                                        <input type="email" class="form-control" id="exampleModalInputEmail2" placeholder="Email">
                                        <small class="form-text text-muted">We'll never share your email with anyone
                                            else.
                                        </small>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="exampleModalInputPassword2" class="col-md-2 col-form-label">Password</label>
                                    <div class="col-md-10">
                                        <input type="password" class="form-control" id="exampleModalInputPassword2" placeholder="Password">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="exampleModalInputState2" class="col-md-2 col-form-label">State</label>
                                    <div class="col-md-10">
                                        <select class="form-control" id="exampleModalInputState2">
                                            <option value="">Choose One</option>
                                            <option value="1">California</option>
                                            <option value="2">Virginia</option>
                                            <option value="3">Texas</option>
                                            <option value="4">Florida</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-10 offset-md-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="exampleModalRememberMe2">
                                            <label class="form-check-label" for="exampleModalRememberMe2">Remember me</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-10 offset-md-2">
                                        <button type="submit" class="btn btn-secondary">Sign in</button>
                                    </div>
                                </div>
                            </form>
                        {{/modalContent}}
                    {{/modal}}

                    {{#modal 'fade modal-info''exampleModal3' 'modal-dialog-centered modal-lg'}}
                        {{{modalHeader 'Modal form 3'}}}
                        {{#modalContent}}
                            <form class="form-inline">
                                <label class="sr-only" for="inlineModalFormUsername2">Username</label>
                                <div class="input-group with-addon-icon-left mb-2 mr-sm-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="icon-user"></i></div>
                                    </div>
                                    <input type="text" class="form-control" id="inlineModalFormUsername2" placeholder="Username">
                                </div>

                                <label class="sr-only" for="inlineModalFormPassword2">Password</label>
                                <div class="input-group with-addon-icon-left mb-2 mr-sm-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="icon-key"></i></div>
                                    </div>
                                    <input type="password" class="form-control" id="inlineModalFormPassword2" placeholder="Password">
                                </div>

                                <div class="form-check mb-2 mr-sm-2">
                                    <input class="form-check-input" type="checkbox" id="inlineModalFormCheck">
                                    <label class="form-check-label" for="inlineModalFormCheck">
                                        Remember me
                                    </label>
                                </div>

                                <button type="submit" class="btn btn-info mb-2">Login</button>
                            </form>
                        {{/modalContent}}
                    {{/modal}}

                    <!-- Minimal modal -->
                    <div class="modal fade minimal" id="exampleModal4" tabindex="-1" role="dialog"
                         aria-labelledby="exampleModal4Label"
                         aria-hidden="true" data-backdrop="static">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header border-0">
                                    <h5 class="modal-title text-white" id="exampleModal4Label">Register now</h5>
                                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                {{#modalContent}}
                                    <form>
                                        <div class="form-group">
                                            <label for="exampleInputEmail5" class="text-white">Email address</label>
                                            <input type="email" class="form-control" id="exampleInputEmail5" aria-describedby="emailHelp" placeholder="Enter email">
                                            <small id="emailHelp5" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword5" class="text-white">Password</label>
                                            <input type="password" class="form-control" id="exampleInputPassword5" placeholder="Password">
                                        </div>
                                        <div class="form-group form-check">
                                            <input type="checkbox" class="form-check-input" id="exampleCheck5">
                                            <label class="form-check-label text-white" for="exampleCheck5">Check me out</label>
                                        </div>
                                        <button type="submit" class="btn btn-primary has-icon-left"><i class="icon-check"></i>Signup</button>
                                        <button type="submit" class="btn btn-light" data-dismiss="modal">Cancel</button>
                                    </form>
                                {{/modalContent}}
                            </div>
                        </div>
                    </div>
                    <!-- /Modal form -->

                {{/card_body_has }}
            {{/card}}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{#card}}
                {{{card_header 'Required label'}}}
                {{#card_body}}
                    <p>A field can show that input is mandatory. Just add <code>.required-field</code> class to the <code>&lt;label&gt;</code> .</p>
                    <!-- Required -->
                    <form action="">
                        <div class="form-group">
                            <label for="exampleRequiredLastName" class="required-field">Last name</label>
                            <input type="email" class="form-control" id="exampleRequiredLastName" placeholder="Last name">
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="exampleRequiredAgree">
                            <label class="form-check-label required-field" for="exampleRequiredAgree">
                                <small>I agree to the terms and conditions</small>
                            </label>
                        </div>
                    </form>
                    <!-- /Required -->
                {{/card_body }}
            {{/card}}

        </div>
        <div class="col-12">
            {{#card}}
                {{{card_header 'Inverted form'}}}
                {{#card_body_has 'has-bg-dark bg-dark'''}}
                    <!-- Stacked form -->
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail6">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail6"
                                   aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp6" class="form-text text-muted">We'll never share your email with anyone
                                else.
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword6">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword6"
                                   placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlFile6">File input</label>
                            <input type="file" class="form-control-file" id="exampleFormControlFile6">
                            <small id="fileInputHelp6" class="form-text text-muted">Example block-level help text here.</small>
                        </div>

                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck6">
                            <label class="form-check-label" for="exampleCheck6">Check me out</label>
                        </div>
                        <button type="submit" class="btn btn-light">Submit</button>
                    </form>
                    <!-- /Stacked form -->
                {{/card_body_has }}
            {{/card}}
        </div>
    </div>
</div>