            {{/card}}</div>
        <div class="col-xl-6 col-md-12 pl-md-2">
            {{#card}}
                {{{card_header 'Basic Example'}}}
                {{#card_body}}
                    <p>Use the <code>data-placement</code> attribute to set the position of the popover on top, bottom, left or the right side of the element:</p>
                    <!-- Basic Example -->
                    <button type="button" class="btn btn-primary mb-1" role="button" data-container="body"
                            data-toggle="popover" data-placement="top" title="Popover on top"
                            data-content="And here's some amazing content. It's very engaging. Right?">Popover on top
                    </button>
                    <button type="button" class="btn btn-primary mb-1" role="button" data-container="body"
                            data-toggle="popover" data-placement="right" title="Popover on right"
                            data-content="And here's some amazing content. It's very engaging. Right?">Popover on right
                    </button>
                    <button type="button" class="btn btn-primary mb-1" role="button" data-container="body"
                            data-toggle="popover" data-placement="bottom" title="Popover on bottom"
                            data-content="And here's some amazing content. It's very engaging. Right?">Popover on bottom
                    </button>
                    <button type="button" class="btn btn-primary mb-1" role="button" data-container="body"
                            data-toggle="popover" data-placement="left" title="Popover on left"
                            data-content="And here's some amazing content. It's very engaging. Right?">Popover on left
                    </button>
                    <!-- /Basic Example -->
                {{/card_body}}
            {{/card}}
            {{#card}}
