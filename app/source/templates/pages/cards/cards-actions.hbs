---
title: Card with actions
lead: Add as many actions in a card header. Given actions are for fullscreen, refresh, close, collapse and dropdown.
components: true
categories: Cards
---

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-sm-12">
            <!-- Collapsible card -->
            <div class="card">
                <div class="card-header">
                    {{{card_title 'Collapsible card'}}}
                    <div class="card__actions ml-auto">
                        <a href="#" class="card__actions-item" data-card="collapse">
                            <i class="fa fa-chevron-up" data-toggle="tooltip" data-placement="top" title="Collapse"></i></a>
                    </div>
                </div>
                {{#card_body}}
                    <p class="card-text">{{{placeholder-lorem-sht}}}</p>
                {{/card_body}}
                <div class="card-footer bg-white text-muted">Card footer</div>
            </div>
            <!-- /Collapsible card -->
        </div>
        <div class="col-md-4 col-sm-12">
            <!-- Dismissible card -->
            <div class="card">
                <div class="card-header">
                    {{{card_title 'Dismissible card'}}}
                    <div class="card__actions ml-auto">
                        <a href="#" class="card__actions-item" data-card="close"><i class="fa fa-times" data-toggle="tooltip" data-placement="top" title="Close"></i></a>
                    </div>
                </div>
                {{#card_body}}
                    <p class="card-text">{{{placeholder-lorem-sht}}}</p>
                {{/card_body}}
                <div class="card-footer bg-white text-muted">Card footer</div>
            </div>
            <!-- /Dismissible card -->
        </div>
        <div class="col-md-4 col-sm-12">
            <!-- Fullscreen card -->
            <div class="card">
                <div class="card-header">
                    {{{card_title 'Fullscreen card'}}}
                    <div class="card__actions ml-auto">
                        <a href="#" class="card__actions-item" data-card="fullscreen">
                            <i class="fa fa-expand" data-toggle="tooltip" data-placement="top" title="Fullscreen"></i></a>
                    </div>
                </div>
                {{#card_body}}
                    <p class="card-text">{{{placeholder-lorem-sht}}}</p>
                {{/card_body}}
                <div class="card-footer bg-white text-muted">Card footer</div>
            </div>
            <!-- /Fullscreen card -->
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-sm-12">
            <!-- Card with dropdowns -->
            <div class="card">
                <div class="card-header">
                    {{{card_title 'Card with dropdowns'}}}
                    <div class="card__actions ml-auto">
                        <a class="card__actions-item dropdown-toggle no-caret" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="icon-options-vertical" data-toggle="tooltip" data-placement="top" title="Dropdown"></i>
                        </a>
                        {{#ddw_menu_has 'themed extended dropdown-menu-right'}}
                            {{{ddw_header 'Dropdown header'}}}
                            {{#ddw_items dropdowns.items}}
                                <a class="{{class}}" href="{{url}}"><i class="{{class_i}}  mr-2"></i>{{text}}
                                    <span class="{{class_badge_modifier}} ml-auto">{{badge_count}}</span></a>
                            {{/ddw_items}}
                        {{/ddw_menu_has}}
                    </div>
                </div>
                {{#card_body}}
                    <p class="card-text">{{{placeholder-lorem-sht}}}</p>
                {{/card_body}}
                <div class="card-footer bg-white text-muted">Card footer</div>
            </div>
            <!-- /Card with dropdowns -->
        </div>
        <div class="col-md-4 col-sm-12">
            <!-- Refreshable card -->
            <div class="card card-refresh">
                <div class="refresh-container">
                    <div class="loader spinner-border spinner-border-sm" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <div class="card-header">
                    {{{card_title 'Refreshable card'}}}
                    <div class="card__actions ml-auto">
                        <a href="#" class="card__actions-item" data-card="refresh">
                            <ion-icon name="refresh-outline" size="small" data-toggle="tooltip" data-placement="top" title="Refresh"></ion-icon>
                        </a>
                    </div>
                </div>
                {{#card_body}}
                    <p class="card-text">{{{placeholder-lorem-sht}}}</p>
                {{/card_body}}
                <div class="card-footer bg-white text-muted">Card footer</div>
            </div>
            <!-- /Refreshable card -->
        </div>
    </div>

